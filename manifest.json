{
  "manifest_version": 3,
  "name": "OshiNoKoExtensionBKomachi",
  "version": "1.0",
  "description": "Beautiful rotating wallpapers for your new tab, Featuring B-Komachi!",
  "icons": {
    "16": "BKomachiLogo.png",
    "32": "BKomachiLogo.png",
    "48": "BKomachiLogo.png",
    "128": "BKomachiLogo.png"
  },
  "action": {
    "default_popup": "hello.html",
    "default_icon": "BKomachiLogo.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.svg",
        "*.png",
        "*.jpg",
        "*.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://postimages.org/ https://raw.githubusercontent.com/"
  }
}